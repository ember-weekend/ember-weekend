{{#episode-show episode=episode}}
  {{#note-list}}
    {{#each episode.guests as |guest|}}
      {{guest-item name=guest.name guestInfoURL=guest.guestInfoURL avatarURL=guest.avatarURL tagLine=guest.tagline bio=guest.bio}}
    {{/each}}
    {{#each showNotes as |note|}}
      {{#note-item data-test-note-item time=note.timeStamp episode=episode}}
        {{#if note.resource.url}}
          {{#link-to-site data-test-note-link href=note.resource.url}}
            {{#external-title data-test-note-title class="text-sm font-bold" }}
              {{note.title}}
            {{/external-title}}
          {{/link-to-site}}
        {{else}}
          <h1 class="text-sm font-bold" data-test-note-title>
            {{note.title}}
          </h1>
        {{/if}}
        <p class="text-sm font-thin">
          {{#each note.resource.authors as |author|}}
            by
            {{#if author.url}}
              {{#link-to-site href=author.url class="text-orange-200"}}
                {{author.name}}
              {{/link-to-site}}
            {{else}}
              {{author.name}}
            {{/if}}
          {{/each}}
        </p>
      {{/note-item}}
    {{/each}}
  {{/note-list}}
{{/episode-show}}
