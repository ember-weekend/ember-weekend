<div class="relative">
  {{#if (eq @style "orange")}}
    <button {{action (if @playing @pause @play) bubbles=false}}
      class="focus:outline-none w-10 h-10 bg-orange-300 hover:bg-orange-200 text-white text-lg rounded-full flex items-center justify-center orange-outline">
      {{#if @playing}}
        <i class="fa fa-pause" data-test-pause></i>
      {{else}}
        <i class="fa pl-1 fa-play" data-test-play></i>
      {{/if}}
    </button>
  {{else}}
    <button {{action (if @playing @pause @play) bubbles=false}}
      class="focus:outline-none mt-4 mb-3 w-12 h-12 border rounded-full border-gray-700 text-2xl flex items-center justify-center">
      {{#if @playing}}
        <i class="fa fa-pause" data-test-pause></i>
      {{else}}
        <i class="fa pl-1 fa-play" data-test-play></i>
      {{/if}}
    </button>
  {{/if}}
</div>
